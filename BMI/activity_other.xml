<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/hh">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="关于BMI"
        android:textSize="35sp"
        android:textStyle="bold"
        android:paddingTop="20sp"
        android:textColor="#facfaa"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="       BMI指数（Body Mass Index）即身体质量指数，是与体内脂肪总量密切相关的指标，主要反映全身性超重和肥胖。由于BMI计算的是身体脂肪的比例，所以在测量身体因超重而面临心脏病、高血压等风险时更准确。"
        android:textSize="18sp"
        android:textColor="#facfaa"
        android:layout_marginTop="20sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="       BMI指数范围："
        android:textSize="18sp"
        android:textColor="#facfaa"
        android:layout_marginTop="10sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="小于16"
                android:textSize="18sp"
                android:textColor="#facfaa"
                android:gravity="center"
                android:layout_marginTop="7sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="16~18.5"
                android:textSize="18sp"
                android:textColor="#facfaa"
                android:gravity="center"
                android:layout_marginTop="7sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="18.5~25"
                android:textSize="18sp"
                android:textColor="#facfaa"
                android:gravity="center"
                android:layout_marginTop="7sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="25~30"
                android:textSize="18sp"
                android:textColor="#facfaa"
                android:gravity="center"
                android:layout_marginTop="7sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="30~35"
                android:textSize="18sp"
                android:textColor="#facfaa"
                android:gravity="center"
                android:layout_marginTop="7sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="35~40"
                android:textSize="18sp"
                android:textColor="#facfaa"
                android:gravity="center"
                android:layout_marginTop="7sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="大于40"
                android:textSize="18sp"
                android:textColor="#facfaa"
                android:gravity="center"
                android:layout_marginTop="7sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="极度偏瘦"
                android:textSize="18sp"
                android:textColor="#facfaa"
                android:layout_marginTop="7sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="偏瘦"
                android:textSize="18sp"
                android:textColor="#facfaa"
                android:layout_marginTop="7sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="正常"
                android:textSize="18sp"
                android:textColor="#facfaa"
                android:layout_marginTop="7sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="偏胖"
                android:textSize="18sp"
                android:textColor="#facfaa"
                android:layout_marginTop="7sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="肥胖"
                android:textSize="18sp"
                android:textColor="#facfaa"
                android:layout_marginTop="7sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="重度肥胖"
                android:textSize="18sp"
                android:textColor="#facfaa"
                android:layout_marginTop="7sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="极度肥胖"
                android:textSize="18sp"
                android:textColor="#facfaa"
                android:layout_marginTop="7sp"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>